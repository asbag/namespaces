<?php

namespace fub;



function load_classes ($class_to_load) {
	$full_path = 'classes/' . strtolower($class_to_load) . '.php';
	if (file_exists($full_path)) {
		include($full_path);
	}
}


spl_autoload_register(__NAMESPACE__ . '\load_classes');

echo "adiós";
use foo as feline;
use bar as canine;
use animate;

